@model ISay.Models.Blog

@{
    ViewBag.Title = "Details";
}

<!-- Page Header -->
<header class="intro-header post_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>@Html.DisplayFor(model => model.title)</h1>
                    <h2 class="subheading">@Html.DisplayFor(model => model.subtitle)</h2>
                    <span class="meta">
                        Posted by @Html.DisplayFor(model => model.creator)
                        on @Html.DisplayFor(model => model.create_date)
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                @Html.Raw(HttpUtility.HtmlDecode(Model.detail))
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#" onclick="javascript:history.go(-1)"><span>&larr; Back to List</span></a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</article>


